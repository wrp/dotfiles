
delete() {
	local _var=$1
	local _v
	shift
	for _v; do
		eval "$_var=\"$( eval echo \"\$$_var\" |
			tr : \\n | sed -e "\@^$_v\$@d" | tr \\n : | sed 's/:$//' )\""
	done
}
clean() {
	local _var=$1;
	eval "$_var=\"$( eval echo \"\$$_var\" |
		sed -e 's/::*/:/g' -e 's/^:*//' -e 's/:*$//' )\"";
}
append() {
	local _var=$1
	local _v
	shift
	for _v; do
		delete $_var $_v
		eval "$_var=\"\$$_var:$_v\""
	done
	clean $_var
}
prepend() {
	local _var=$1
	local _v
	shift
	for _v; do
		delete $_var $_v
		eval "$_var=\"$_v:\$$_var\""
	done
	clean $_var
}
tmux_one() {
	tmux set -g window-status-current-format '#W'
	tmux set -g status-style bg=black
	tmux set -ag status-style fg=black
	tmux set -ag window-status-current-style bg=black
}
tmux_all() {
	tmux set -g status-style bg=green
	tmux set -g window-status-current-format '#I:#W'
	tmux set -ga window-status-current-style bg=blue
}
