#!/bin/sh

test $1 = . && set --

name=${1-${PWD##*/}}
name=${name%/}
dir=$(realpath "${1-$PWD}" 2> /dev/null)

if test -z "$TMUX"; then
	tmux attach 2> /dev/null || tmux new-session -c "$dir" -s "$name"
	exit 0
fi

if ! tmux has-session -t "${name}" 2> /dev/null; then

	# Create new session with multiple windows.  Default 3, max 9
	tmux new-session -c "$dir" -s "$name" -d
	yes | sed -e 1d -e "${NEW_SESSION_PANE_COUNT-3}q" -e 9q | while read s
	do
		tmux new-window -d -c "$dir" -a -t "$name":0 $SHELL
	done
fi
tmux switch-client -t "$name"
