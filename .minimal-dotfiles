cat << 'EOF' > .bashrc
test -f /etc/bashrc && . /etc/bashrc
unalias -a
trap 'history -a' DEBUG
EVENT_NOKQUEUE=1
HISTTIMEFORMAT='%H:%M:%S '
HISTFILESIZE=9999999999
LSCOLORS=fxfxcxdxbxegedabagacad
LESS=-FeRXSQ
LC_TIME=C
set -o vi
PS1='\[$(tput setaf $(( $(expr $? == 0) + 1))
	)\]$(date "+%H:%M:%S") $$ \h\[$( tput setaf 2 2> /dev/null )\]\$ '
PROMPT_COMMAND='printf "\033k%s\033\\" "${HOSTNAME#*-}"'
ta() { tmux attach; }
EOF

cat << 'EOF' >> .bash_profile
[[ "$-" =~ i ]] && test -f $HOME/.bashrc && . $HOME/.bashrc
EOF

cat << 'EOF' > .vimrc
nore v V
nore V v
nore ; :
nore , ;
set nowrapscan
let loaded_matchparen = 1
set path+=/usr/local/confluent-3.2.0
set path+=/usr/local/confluent-4.2.0
set includeexpr=substitute(v:fname,'$DAEMON_PATH/','','g')
set t_ti= t_te=  " Disable clear screen on exit
highlight Comment ctermfg=darkcyan
highlight String ctermfg=darkcyan
EOF

cat << 'EOF' > .inputrc
set editing-mode vi
set keymap vi
EOF

cat << 'EOF' > .tmux.conf
unbind C-b
set -g prefix C-k
bind C-k send-prefix
set -g window-status-current-bg yellow
set -g window-status-current-fg red
set -g window-status-current-format '#I:#W'
set -g status-left-length 25
set status-right '%H:%M %e-%b'
set-option -g update-environment "SSH_AUTH_SOCK"
set history-limit 25000
bind-key -n Left previous-window
bind-key -n Right next-window
bind-key ',' command-prompt "rename-window '%%'"
bind-key '$' command-prompt "rename-session '%%'"
EOF

cat << 'EOF' > .editrc
bind -v
EOF
