
[alias]
	a = add-files
	ab = archive-branch
	ap = add --patch
	b = interactive-branch
	caa = !bash -c 'SKIP_COMMIT_CHECKS=silent git commit --amend -a -C HEAD --cleanup=strip \"${@}\"' _
	caan = caa -n
	ci = commit
	ciam = ci -am
	co = checkout
	cp = cherry-pick
	cpx = cp -x
	credit = annotate
	cwip = !bash -c 'SKIP_COMMIT_CHECKS=silent git ci --trailer Type:WIP -m \"WIP: ${*}\"' _
	d = diff
	dc = diff --cached
	dcno = diff --cached --name-status
	dm = "!bash -c 'a=${1:-$(git-base-branch)} || exit; b=\"${2}\"; shift 2; git diff --merge-base \"$@\" \"$a\" $b' _"
	dmm = dm '' '' --diff-filter=M
	dmno = dm '' '' --name-status
	dmw = dm '' '' --ignore-all-space
	dmnw = dm '' '' --name-status --ignore-all-space
	dn = diff --numstat
	dno = diff --name-status
	dw = diff --word-diff
	dwa = diff --word-diff-regex=.
	exec = "!exec "  # execute a shell command in the top level
	l1 = log-oneline
	l = l1
	l1a = l1 --graph --decorate
	l1ah = l1 -n 10 --graph --decorate
	l1h = l1 -n 10
	l11 = l1 --first-parent
	l11a = l1a --first-parent
	l11ah = l1ah --first-parent
	l11h = l1h --first-parent
	la = l1 --graph --decorate  # same as l1a
	ld = l1 --date=format:'%FT%T%z'
	ldh = ld -n 10
	ls = l1 --show-signature
	no = show --name-status --pretty=format:
	r = recurse
	s = status --short
	sa = status -uall --ignored
	sap = !bash -c 'git stash apply stash@{${1-0}}' _
	sk = !bash -c 'git stash push --keep-index ${1:+-m \"${*}\"}' _
	sl = stash list
	sp = !bash -c 'git stash pop stash@{${1-0}}'
	sq = squash
	ss = !bash -c 'git stash push ${1:+-m \"${*}\"}' _
	t = log --format=format:\"%(trailers:key=Type,separator=%x2C,valueonly): %s\"
	u = update
	w = rev-parse --abbrev-ref HEAD
[apply]
	whitespace = error
[core]
	# whitespace = tab-in-indent
	whitespace = indent-with-non-tab
	editor = vim
	hooksPath = ~/.config/git/hooks
[push]
	default = upstream
	autoSetupRemote = true
[pager]
	status = true
        log = diff-highlight | less
        show = diff-highlight | less
        diff = diff-highlight | less

[color "diff-highlight"]
	# foreground, background
	oldNormal = "white #1a1a1a"
	oldHighlight = "white red"
	newNormal = "white #1a1a1a"
	newHighlight = "black green"


[init]
	defaultBranch = main
[versionsort]
	prereleaseSuffix = .rc
[color "branch"]
	meta = red green bold
	current = black cyan
	worktree = black yellow
[color]
	branch = true
[pull]
	rebase = true
[advice]
	detachedHead = false
	addEmptyPathspec = false
[tag]
	gpgSign = true
[commit]
	status = false
	gpgSign = false
[include]
	path = ~/.gitconfig-local
[merge]
	tool = vimdiff
[status]
	showUntrackedFiles = no
[diff]
	wsErrorHighlight = all
	# ignoreSubmodules = all        # ignore with --ignore-submodules=none
[submodule]
	recurse = true
[color "diff"]
	whitespace = red reverse
[log]
	follow = true
	default-trailer = Type
	trailer-width = 3
[help]
	autocorrect = never
