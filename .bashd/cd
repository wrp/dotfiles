cd() {
	local status path
	if test $# -gt 1; then
		echo 'cd takes at most one argument' >&2
		return 1
	fi
	local _dir=${1-$(tmux display-message -p '#{session_path}' | sed 1q)}

	command cd "${_dir:-$HOME}" || return
	path=$(pwd -P) || return
	if
		test -n "$VIRTUAL_ENV" \
		&& test "${path#${VIRTUAL_ENV%/.venv}}" = "$path"
	then
		echo 'You have left the scope of current venv.  To re-enter:'
		printf '%s\n' ". ${VIRTUAL_ENV}/bin/activate"
		deactivate
	fi >&2
}
