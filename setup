#!/bin/sh

# Run this script from a location to which links should be added.
# (eg, run it from $HOME)

die() { echo $* >&2; exit 1; }
test "$(pwd)" = "$HOME" || die "Run from $HOME"
base=$(dirname $0)

files='
.bash-functions
.bash-interactive-functions
.bash_profile
.bashrc
.ctags
.editrc
.gitconfig
.inputrc
.pystartup
.tmux.conf
.toprc
.vim
.vimrc
'

for file in $file; do ln -s $base/$file . || die; done
